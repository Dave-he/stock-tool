<Window x:Class="stock_tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:stock_tool"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400"
        KeyDown="Window_KeyDown">
    <Grid>
        <Button x:Name="StartButton" Content="单个开始" HorizontalAlignment="Left" Margin="80,10,0,0" VerticalAlignment="Top" Width="75" Click="StartButton_Click"/>
        <Button x:Name="StartAll" Content="开始所有" HorizontalAlignment="Right" Margin="0,10,80,0" VerticalAlignment="Top" Width="75" Click="StartAll_Click"/>
        <TextBox x:Name="LogTextBox" Margin="10,40,10,10" TextWrapping="Wrap" IsReadOnly="True"/>
    </Grid>
</Window>
